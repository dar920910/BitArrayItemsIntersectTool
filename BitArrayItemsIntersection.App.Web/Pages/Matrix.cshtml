@page
@model MatrixModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
    <h1 class="display-2">This is a New Matrix: </h1>
    <h2>
        This Matrix has the following dimensions:
        X = @Model.Dimension_X, Y = @Model.Dimension_Y
    </h2>
    <a class="btn btn-primary" href="/">Return to Home Page</a>
    <table class="table">
        <tbody>
        @if (Model.TargetArray is not null)
        {
            @for (int @index_X = 0; @index_X < @Model.Dimension_X; @index_X++)
            {
                <tr>
                @for (int @index_Y = 0; @index_Y < @Model.Dimension_Y; @index_Y++)
                {
                    <td>@Model.TargetArray[@index_X, @index_Y]</td>
                }
                </tr>
            }
        }
        </tbody>
    </table>
</div>